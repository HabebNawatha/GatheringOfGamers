<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game: "
            android:textSize="16sp"
            android:textColor="#000000"/>

    <TextView
            android:id="@+id/game_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Competitive level: "
            android:textSize="16sp"
            android:textColor="#000000"/>

    <TextView
            android:id="@+id/competitive_level_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skill level: "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/skill_level_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Communication level: "
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/communication_level_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"/>

</LinearLayout>
