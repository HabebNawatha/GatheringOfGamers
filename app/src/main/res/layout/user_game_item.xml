<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/game_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game: "
                android:textSize="16sp"
                android:textColor="#000000"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="0dp"
                      android:layout_weight="1">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content"
                          android:gravity="left"
                          android:layout_weight="1">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Competitive"
                        android:textSize="12sp"
                        android:textColor="#000000"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <View
                            android:id="@+id/competitivebox1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                    android:background="@color/black"/>

                    <View
                            android:id="@+id/competitivebox2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/competitivebox3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/competitivebox4"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/competitivebox5"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content"
            android:layout_weight="1">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skill"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textColor="#000000"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                android:layout_gravity="center">

                    <View
                            android:id="@+id/skillbox1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/skillbox2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/skillbox3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/skillbox4"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/skillbox5"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="wrap_content"
                          android:gravity="right"
                            android:layout_weight="1">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Communication"
                        android:layout_gravity="right"
                        android:textSize="12sp"
                        android:textColor="#000000"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                    <View
                            android:id="@+id/communicationbox1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/communicationbox2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/communicationbox3"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/communicationbox4"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>

                    <View
                            android:id="@+id/communicationbox5"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_margin="2dp"
                            android:background="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
