<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GatheringOfGamers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/neon_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neon_red_customized</item>
        <item name="colorSecondaryVariant">@color/neon_red_customized</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background theme color -->
        <item name="android:windowBackground">@drawable/background_theme</item>
        <!-- Text color theme -->
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
